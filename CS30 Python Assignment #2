# Basic set, with square in middel of the screen
def setup():
    size(500,500)
    background(102, 102, 102)
    fill(216, 84, 84)
    rect(200,200, 100,100)
    fill(255)
    textSize(15)
    text("If you click around in canvas, the square will follow the cursor." , 3, 18)
    text("Also press 'y', 'g', and 'b' for yellow, green and blue.", 3, 34)
colour = (216, 84, 84) 
# This is the part where square moves when user click mouse.
def mouseClicked():
    background(102, 102, 102)
    fill(colour[0], colour[1], colour[2])
    rect(mouseX-50,mouseY-50, 100,100)
    
# This is the part change of color is happening    
def keyPressed():  
    global colour  
    if key == "y": # y for yellow
        colour = (250, 255, 109)
        background(102, 102, 102)
        fill(colour[0], colour[1], colour[2])
        rect(mouseX-50,mouseY-50, 100,100)
    elif key == "b": # b for blue
        colour = (87, 176, 249)
        background(102, 102, 102)
        fill(colour[0], colour[1], colour[2])
        rect(mouseX-50,mouseY-50, 100,100)
    elif key == "g": # g for green
        colour = (126, 239, 122)
        background(102, 102, 102)
        fill(colour[0], colour[1], colour[2])
        rect(mouseX-50,mouseY-50, 100,100)
    else:
        # Greyscale color
        fill (200)
        rect(0,0, 100,100)
        
    
def draw():
    return
    
